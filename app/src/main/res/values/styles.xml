<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="SearchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/backgroundColor</item>
        <item name="colorAccent">#FFF</item>

        <item name="android:colorControlActivated" tools:targetApi="lollipop">#FFFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#FFF</item>
        <item name="android:editTextColor">#FFF</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#FFF</item>
        <item name="android:textColorPrimaryDisableOnly">#FFF</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">#FFF</item>
    </style>
    <style name="SignupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <!--<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/backgroundColor</item>-->
        <item name="colorAccent">#FFF</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#FFFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#FFF</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#FFF</item>
    </style>



    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:textColorPrimary">#FFF</item>
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>

    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="ErrorTextApp" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>



</resources>
